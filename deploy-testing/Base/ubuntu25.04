FROM "ubuntu:25.04" as base
LABEL stage=diffrg-image

# set a directory for the app
WORKDIR /

COPY ../deploy.sh /deploy.sh

# install dependencies
RUN apt-get -y update
RUN apt-get -y install git cmake libopenblas-dev build-essential python3 doxygen graphviz libgsl-dev
# install DiFfRG
RUN bash deploy.sh

